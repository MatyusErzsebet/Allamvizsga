<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FurnitureListFragment">


    <androidx.appcompat.widget.SearchView
        android:id = "@+id/purchasesListSearchView"
        android:layout_width="280dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sortTvPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="Sorting:"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toStartOf="@+id/dropStatusPurchases"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/dropStatusPurchases"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="@dimen/spinner_height"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawSelectorOnTop="true"
        tools:ignore="MissingConstraints" />


    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/purchasesRecyclerViewAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:background="@color/details_bg_color" />


</androidx.constraintlayout.widget.ConstraintLayout>